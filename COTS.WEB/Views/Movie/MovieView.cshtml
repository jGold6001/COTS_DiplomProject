@model COTS.WEB.Models.MovieViewModel

@{
    ViewBag.Title = "MovieView";
}

<div id="movie_block">
    <div class="row">
        <div class="col-lg-6">
            <h2>@Model.Name</h2>
            <h5>@Model.Year</h5>
            <h4>@Model.Genre</h4>
            <p>@Model.Destination</p>
        </div>

        <div class="col-lg-6">
            <br />
            <p>Длительность:  @Model.Duration</p>
            <p>Производство: @Model.Country</p>
            <p>Режиссёр: @Model.Director</p>
            <p>Актеры: @Model.Actors</p>
        </div>
    </div>
</div>

<div id="seances_block">
    
    <!--date block-->
    <div id="date_select">
        <div class="row" style="border: 1px solid #BDBDBD; padding: 5px;">
            <div class="col-lg-12" style="padding: 5px;">
                <input type="date" id="sel_date">
            </div>
        </div>
    </div>
   
    <!--cinemas block--> 
    <div id="cinemas_list"></div>

</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    $(function () {
        $.date = function (dateObject) {
            var d = new Date(dateObject);
            var day = d.getDate();
            var month = d.getMonth() + 1;
            var year = d.getFullYear();
            if (day < 10) {
                day = "0" + day;
            }
            if (month < 10) {
                month = "0" + month;
            }
            var date = year + '-' + month + '-' + day;
            return date;
        };

        //default setting
        var current_date = $.date($.now())
        $('#sel_date').val(current_date);

